.tui-code__input {
  position: relative;
}

.tui-code__input {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex: 1;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}


.tui-cinput__item {
  display: flex;
  box-sizing: border-box;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-style: solid;
  position: relative;
  overflow: hidden;
}

.tui-cinput__text {
  position: absolute;
  left: 0;
  top: 0;
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.tui-cinput__placeholder {
  text-align: center;
  opacity: 0;
}

.tui-cinput__cursor {
  border-radius: 2px;
  width: 0;
}

.tui-cinput__cursor-ani {
  width: 2px;
  animation: ani_cursor 1s infinite steps(1, start);
}

@keyframes ani_cursor {
  0% {
    opacity: 0;
  }

  50% {
    opacity: 1;
  }

  100% {
    opacity: 0;
  }
}

.tui-cinput__hidden {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
  height: 0;
  width: 0;
  border: none;
  margin: 0;
  padding: 0;
  opacity: 0;
  font-size: 0.1;
  color: transparent;
}
