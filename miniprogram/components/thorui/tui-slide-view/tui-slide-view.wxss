.tui-slide-view {
  position: relative;
  overflow: hidden
}

.tui-slideview__left {
  width: 100%;
  position: relative;
  z-index: 10
}

.tui-slideview__right {
  position: absolute;
  left: 100%;
  top: 0;
  height: 100%
}

.tui-slideview__btn__wrap {
  position: absolute;
  left: 0;
  bottom: 0;
  text-align: center;
  min-width: 136rpx;
  height: 100%;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tui-slideview__buttons {
  width: 100%;
  height: 100%;
}

.tui-slideview__btn {
  display: flex;
  align-items: center;
  justify-content: center;
}

.tui-slideview__mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 50;
}