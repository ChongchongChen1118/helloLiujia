.tui-countdown__verify {
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
	white-space: nowrap;
	box-sizing: border-box;
}

.tui-verify__opacity {
	opacity: 0.5;
}

.tui-verify__line {
	position: absolute;
	width: 200%;
	height: 200%;
	transform-origin: 0 0;
	transform: scale(0.5, 0.5) translateZ(0);
	box-sizing: border-box;
	border-style: solid;
	left: 0;
	top: 0;
	pointer-events: none;
}